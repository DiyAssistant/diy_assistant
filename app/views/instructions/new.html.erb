<%= form_for @instruction do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.collection_select(:category_id, @categories, :id, :name) %>
  <br>
  <%= f.file_field :image %>
  <br>
  <%= f.submit 'Publish' %>
<% end %>

<%= @instruction.errors.full_messages.first if @instruction && @instruction.errors.any? %>
